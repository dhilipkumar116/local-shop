<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopActivity.ShopLoginActivity"
    android:background="@drawable/login_gradient_bg">


    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageButton
            android:id="@+id/logo1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo1"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@color/transparent">
        </ImageButton>

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/logo1"
            android:visibility="visible">

            <TextView
                android:id="@+id/login_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Shop"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="30sp"
                android:layout_marginTop="1dp" />


            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_txt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@color/white"
                        android:text="shop name:"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"/>

                    <EditText
                        android:id="@+id/Sname"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/et_bg"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_marginTop="5dp"
                        android:inputType="text"
                        android:hint="shop name"
                        android:drawableRight="@drawable/username_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@color/white"
                        android:text="shop password:"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        android:id="@+id/SPassword"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/et_bg"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_marginTop="5dp"
                        android:inputType="textPassword"
                        android:hint="shop password"
                        android:drawableRight="@drawable/password_icon"/>

                    <CheckBox
                        android:id="@+id/SRememberme_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:outlineSpotShadowColor="@color/white"
                        android:textColor="@color/white"
                        android:text="remember password?"
                        android:layout_marginTop="10dp"
                        android:textAllCaps="false"
                        android:layout_gravity="left"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"/>

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/SLogin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/l1"
                android:layout_marginTop="30dp"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="login now"
                android:textSize="20dp"
                android:background="@drawable/btn_bg"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/r1"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/Ssignup_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="sign up ! to sell your products."
                android:background="@color/transparent"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/S_forgetpassword"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="forgot password?"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"/>

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/r3"
        android:visibility="visible">

    </RelativeLayout>




</RelativeLayout>