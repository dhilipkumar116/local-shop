<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopActivity.ShopForgotActivity"
    android:gravity="center"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="if you forgotten the password do what's app / mail us. we will respond you within 24 hours. Thank You for selling products with us !"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs_design"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="forgot password?"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>

            <View
                android:layout_width="100dp"
                android:layout_height="5dp"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="what's app us to retrieve password"
                android:textAlignment="center" />
            <Button
                android:id="@+id/sendmess_forgetpassbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send message"
                android:background="@drawable/buttons"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mail us to retrieve password"
                android:textAlignment="center"
                android:layout_marginTop="30dp"/>
            <Button
                android:id="@+id/sendmail_forgetpassbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send mail"
                android:background="@drawable/buttons"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>