<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopActivity.ShopRegisterActivity"
    android:background="@drawable/login_gradient_bg">
    <LinearLayout
        android:id="@+id/SregisterL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

-
        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <ImageButton
                android:id="@+id/logo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@color/transparent">
            </ImageButton>

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/logo1"
                android:visibility="visible">

                <TextView
                    android:id="@+id/Register_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop registration :"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textSize="30sp"
                    android:layout_marginTop="1dp" />


                <LinearLayout
                    android:id="@+id/Shopregister_L2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Register_txt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/white"
                            android:text="shop email:"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"/>

                        <EditText
                            android:id="@+id/RegisterS_email"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:background="@drawable/et_bg"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:layout_marginTop="5dp"
                            android:inputType="textEmailAddress"
                            android:hint="enter shop email"
                            android:drawableRight="@drawable/email_icon"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/white"
                            android:text="shop owner name:"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"/>

                        <EditText
                            android:id="@+id/RegisterS_ownername"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:background="@drawable/et_bg"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:layout_marginTop="5dp"
                            android:inputType="text"
                            android:hint="enter owner name"
                            android:drawableRight="@drawable/username_icon"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/white"
                            android:text="shop name:"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"/>

                        <EditText
                            android:id="@+id/RegisterS_shopname"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:background="@drawable/et_bg"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:layout_marginTop="5dp"
                            android:inputType="text"
                            android:hint="enter shop name"
                            android:drawableRight="@drawable/shop_icon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/white"
                            android:text="shop phone number:"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"/>

                        <EditText
                            android:id="@+id/RegisterS_phonenumber"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:background="@drawable/et_bg"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:layout_marginTop="5dp"
                            android:inputType="number"
                            android:hint="enter shop phone number"
                            android:drawableRight="@drawable/phone_num_icon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/white"
                            android:text="shop street:"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"/>

                        <EditText
                            android:id="@+id/RegisterS_street"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:background="@drawable/et_bg"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:layout_marginTop="5dp"
                            android:inputType="text"
                            android:hint="enter street "
                            android:drawableRight="@drawable/location"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/white"
                            android:text="shop postal code :"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"/>

                        <EditText
                            android:id="@+id/RegisterS_postcode"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:background="@drawable/et_bg"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:layout_marginTop="5dp"
                            android:inputType="number"
                            android:hint="enter postal code"
                            android:drawableRight="@drawable/location"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/white"
                            android:text="shop district:"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"/>

                        <EditText
                            android:id="@+id/RegisterS_district"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:background="@drawable/et_bg"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:layout_marginTop="5dp"
                            android:inputType="text"
                            android:hint="enter district"
                            android:drawableRight="@drawable/location"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/white"
                            android:text="shop password:"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"/>

                        <EditText
                            android:id="@+id/RegisterS_password"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:background="@drawable/et_bg"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:layout_marginTop="5dp"
                            android:inputType="textPassword"
                            android:hint="enter shop password"
                            android:drawableRight="@drawable/password_icon"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/white"
                            android:text="choose shop category :"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"/>

                        <Spinner
                            android:backgroundTint="@android:color/white"
                            android:id="@+id/shop_cat_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
                        </Spinner>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:background="@android:color/white"/>



                    </LinearLayout>


                </LinearLayout>


                <Button
                    android:id="@+id/RegisterS_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Shopregister_L2"
                    android:layout_marginTop="20dp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="register shop "
                    android:textSize="20dp"
                    android:background="@drawable/btn_bg"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"/>

    </LinearLayout>


</ScrollView>