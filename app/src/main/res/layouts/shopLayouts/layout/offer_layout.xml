<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Today_Comboproduct_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Noofproducts"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:hint="product name "
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:inputType="text"/>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Today_Comboproduct_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Productname"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:hint="product quantity (eg: 100g)"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <RadioGroup
                        android:id="@+id/Today_quantity_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp">

                        <RadioButton
                            android:id="@+id/Today_kg_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="kg" />

                        <RadioButton
                            android:id="@+id/Today_mg_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="g" />

                        <RadioButton
                            android:id="@+id/Today_l_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="l" />

                        <RadioButton
                            android:id="@+id/Today_inch_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="inch" />

                        <RadioButton
                            android:id="@+id/Today_piece_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="piece" />

                    </RadioGroup>


                    <RadioGroup
                        android:id="@+id/Today_type_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/Today_veg_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:checked="true"
                            android:text="veg" />

                        <RadioButton
                            android:id="@+id/Today_nonveg_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="nonveg" />

                        <RadioButton
                            android:id="@+id/Today_natural_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="natural" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>