<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/adminorder_r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/Adminordercolor"
            android:padding="5dp">

            <TextView
                android:id="@+id/A_delete_ordertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete"
                android:background="@color/red"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/A_orderphone"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:padding="4dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/A_ordername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/A_orderphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textAlignment="viewEnd"
                android:text="phonenumber"
                android:textColor="@android:color/black"
                android:layout_marginRight="3dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/A_ordertotalp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/A_ordername"
                android:textColor="@android:color/black"
                android:text="totalprice"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/A_orderaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_below="@id/A_ordertotalp"
                android:text="address"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:maxLines="2"/>

            <TextView
                android:id="@+id/A_orderdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_below="@+id/A_orderaddress"
                android:textColor="@android:color/black"
                android:text="date"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/A_ordertime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:layout_below="@+id/A_orderaddress"
                android:textColor="@android:color/black"
                android:text="time"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/A_orderid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_below="@+id/A_ordertime"
                android:textColor="@android:color/black"
                android:text="order id"
                android:textSize="15dp"
                android:layout_marginEnd="20dp"/>



            <TextView
                android:id="@+id/A_odertype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/A_orderid"
                android:text="order type"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/A_oderstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/A_orderid"
                android:text="order status"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"/>



        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>

</RelativeLayout>